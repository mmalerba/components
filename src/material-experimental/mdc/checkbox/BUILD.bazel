package(default_visibility=["//visibility:public"])

load("@io_bazel_rules_sass//:defs.bzl", "sass_library", "sass_binary")
load("//tools:defaults.bzl", "ng_module")
load("//:packages.bzl", "CDK_TARGETS", "MATERIAL_TARGETS")

ng_module(
  name = "checkbox",
  srcs = glob(["**/*.ts"], exclude=["**/*.spec.ts"]),
  module_name = "@angular/material-experimental/checkbox",
  assets = [":checkbox_scss"] + glob(["**/*.html"]),
  deps = [
    "@npm//material-components-web",
  ] + CDK_TARGETS + MATERIAL_TARGETS,
)

sass_library(
  name = "checkbox_scss_lib",
  srcs = glob(["**/_*.scss"]),
  deps = [
    "//src/lib/core:core_scss_lib",
    "//src/material-experimental/mdc:mdc_helper_scss_lib",
  ],
)

sass_binary(
  name = "checkbox_scss",
  src = "checkbox.scss",
  include_paths = [
    "external/npm/node_modules",
  ],
  deps = [
    ":checkbox_scss_lib",
    "//src/lib/core:all_themes",
    "//src/material-experimental/mdc:mdc_scss_deps_lib",
  ]
)
